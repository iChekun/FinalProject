<web-app>
    <display-name>final project</display-name>

    <context-param>
        <param-name>db.driver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>db.url</param-name>
        <param-value>
                jdbc:mysql://localhost/online_store?serverTimezone=Europe/Moscow&amp;useSSL=false&amp;generateSimpleParameterMetadata=true
        </param-value>
    </context-param>
    <context-param>
        <param-name>db.user</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>db.password</param-name>
        <param-value>1111</param-value>
    </context-param>


    <filter>
        <filter-name>encodingfilter</filter-name>
        <filter-class>by.epam.chekun.controller.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>




    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>


    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <location>/WEB-INF/error_page.jsp</location>
    </error-page>



