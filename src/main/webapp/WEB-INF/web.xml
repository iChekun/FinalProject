        <servlet-name>main</servlet-name>
        <jsp-file>/WEB-INF/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>


